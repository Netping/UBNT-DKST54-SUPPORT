#! /bin/sh
#

lan=`/etc/dksl-90-vars lan`
wan=`/etc/dksl-90-vars wan`
dkst=`/etc/dksl-90-vars dkst`

mkdir -p /etc/netplan
/etc/dksl-90-vars netplan >/etc/netplan/netplan.yaml

mkdir -p /etc/iptables
echo "# Generated by iptables-save v1.8.4 on Wed Dec  8 01:52:13 2021
*mangle
:PREROUTING ACCEPT [113:7144]
:INPUT ACCEPT [113:7144]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [109:37096]
:POSTROUTING ACCEPT [109:37096]
COMMIT
# Completed on Wed Dec  8 01:52:13 2021
# Generated by iptables-save v1.8.4 on Wed Dec  8 01:52:13 2021
*nat
:PREROUTING ACCEPT [1:36]
:INPUT ACCEPT [1:36]
:OUTPUT ACCEPT [2:236]
:POSTROUTING ACCEPT [2:236]
-A POSTROUTING -o $lan -j MASQUERADE
COMMIT
# Completed on Wed Dec  8 01:52:13 2021
# Generated by iptables-save v1.8.4 on Wed Dec  8 01:52:13 2021
*filter
:INPUT ACCEPT [1:36]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [109:37096]
-A INPUT -i lo -j ACCEPT
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT
-A INPUT -i $dkst -m state --state NEW -j ACCEPT
-A FORWARD -i $lan -o $dkst -m state --state RELATED,ESTABLISHED -j ACCEPT
-A FORWARD -i $dkst -o $lan -j ACCEPT
-A FORWARD -i $dkst -o $lan -j REJECT --reject-with icmp-port-unreachable
COMMIT
# Completed on Wed Dec  8 01:52:13 2021
" >/etc/iptables/rules.v4

mkdir -p /etc/np_scripts
echo "#!/bin/sh
PATH=/usr/sbin:/sbin:/bin:/usr/bin

iptables -F
iptables -t nat -F
iptables -t mangle -F
iptables -X

#wan=$wan
lan=$lan
dkst=$dkst

# Always accept loopback traffic
iptables -A INPUT -i lo -j ACCEPT

# Allow established connections, and those not coming from the outside
iptables -A INPUT -m state --state ESTABLISHED,RELATED -j ACCEPT
iptables -A INPUT -m state --state NEW -i $dkst -j ACCEPT
iptables -A FORWARD -i $lan -o $dkst -m state --state ESTABLISHED,RELATED -j ACCEPT

# Allow outgoing connections from the LAN side.
iptables -A FORWARD -i $dkst -o $lan -j ACCEPT

# Masquerade.
iptables -t nat -A POSTROUTING -o $lan -j MASQUERADE

# Don't forward from the outside to the inside.
iptables -A FORWARD -i $dkst -o $lan -j REJECT
iptables -A FORWARD -i $dkst -o $lan -j REJECT
# Enable routing.
echo 1 > /proc/sys/net/ipv4/ip_forward
" >/etc/np_scripts/route.sh

chmod 755 /etc/np_scripts/route.sh


exit 0
